- set_meta_tags title: "#{@post.title}"
- set_meta_tags description: "#{@post.to_html.truncate(160)}"

.container
  .row
    .col-md-8
      %section
        %h1.title #{@post.title}
        .body
          = @post.to_html
    .col-md-4
      = render 'shared/side_nav', categories: @categories, tags: @tags
